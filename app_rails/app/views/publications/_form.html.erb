<%= form_with(model: model, local: true) do |form| %>
  <div class="field">
    Título<br />
    <%= form.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>

  <div class="field">
    Tipo de animal<br />
    <%= form.text_field :animal_type, autofocus: true, autocomplete: "type" %>
  </div>

  <div class="field">
    Tipo de publicación<br />
    <%= form.select :category, options_for_select(Publication.types.keys) %>
  </div>

  <div class="field">
    Precio<br />
    <%= form.number_field :price, autofocus: true, autocomplete: "price" %>
  </div>

  <div class="field">
    Dirección<br />
    <%= form.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>